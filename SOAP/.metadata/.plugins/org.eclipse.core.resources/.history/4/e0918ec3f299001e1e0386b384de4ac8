<build>
 <plugins>
 <plugin>
 <groupId>org.apache.cxf</groupId>
 <artifactId>cxf-codegen-plugin</artifactId>
 <version>${cxf.version}</version>
 <executions>
 <execution>
 <id>generate-sources</id>
 <phase>generate-sources</phase>
 <configuration>
 <sourceRoot>
 ${project.build.directory}/generated-sources/cxf
 </sourceRoot>
 <wsdlOptions>
 <wsdlOption> 
 <wsdl>
 ${basedir}/src/main/resources/wsdl/client.wsdl
 </wsdl>
 <packagenames>
 <packagename>fr.insa.soap.wsdltojava</packagename>
 </packagenames>
 </wsdlOption>
 </wsdlOptions>
 </configuration>
 <goals>
 <goal>wsdl2java</goal>
 </goals>
 </execution>
 </executions>
</plugin> 
 </plugins>
 </build>